  }

    /***** Example custom styling *****/
    .myLabel {
    border: 2px solid #AAA;
    border-radius: 4px;
    padding: 2px 5px;
    margin: 2px;
    background: #DDD;
    display: inline-block;
    }
    .myLabel:hover {
    background: #CCC;
    }
    .myLabel:active {
    background: #CCF;
    }
    .myLabel :invalid + span {
    color: #A44;
    }
    .myLabel :valid + span {
