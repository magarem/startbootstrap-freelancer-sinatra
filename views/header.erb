<style>
  header {
    background-size: cover;
    background-attachment: fixed;
    background-position: center center;
    background-attachment: scroll;
  }
</style>
<header ng-controller="headerCtrl" class="main-wrapper"  ng-style="{'background-image': 'url(' + head.backgroundUrl + ') ', 'background-color': head.backgroundColor, 'color': head.fontColor }">
  <div class="demo_changer" >
    <div class="demo-icon" ng-show=isLogged>
      <i class="fa fa-cog fa-spin fa-2x"></i>
    </div><!-- end opener icon -->
    <div class="form_holder">
      <ul  class="nav nav-pills" id="exTab1">
        <li class="active"><a href="#1a" data-toggle="tab">cor</a></li>
        <li><a href="#2a" data-toggle="tab">img</a></li>
        <li><a href="#3a" data-toggle="tab">itens</a></li>
      </ul>
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="predefined_styles center-block">
          <div class="tab-content clearfix">
            <div class="tab-pane active row" id="1a">
                <div  style="margin-left: 12px;"><br>
                  <label for="fundo">Fundo:</label>
                  <color-picker ng-model="head.backgroundColor" event-api="eventApi" options="options"></color-picker>
                  <br>
                  <label for="fonte">Fonte:</label>
                  <color-picker ng-model="head.fontColor"  event-api="eventApi2" options="options"></color-picker>
                  <div class="checkbox">
                    <label><input type="checkbox" ng-model="head.show.txtShadow" >Sombra</label>
                  </div>
                </div>
            </div>
            <div class="tab-pane  row" id="2a">
              <!-- END MODULE #2 -->
              <!-- <h4>Imagem de fundo</h4> -->
              <!-- MODULE #3 --><br>
              <label for="fundo">Imagem de fundo</label>
              <div id=fundos  style="overflow-y: auto; width: 140px; height: 100px;  background-color: #d9d9d9; outline: 1px solid #9a9292;" class="text-center" >
                <div class="backImg center-block" style="outline: 1px solid #b3b3b3;" ng-repeat="item in backGroundItems" back-img="/styleBackgrounds/{{item}}" ng-click="backgroundUrl_set('/styleBackgrounds/'+item)"></div>
              </div>
              <!-- END MODULE #3 --><br>
              <form name="myForm">
                  <fieldset>
                    <button  class="btn-md btn-info" style="margin-bottom: 15px;" ng-click="backgroundUrl_clear();">Apagar fundo</button>
                    <label class="myLabel">
                      <input id=file-input type="file" ngf-select ng-model="picFile2" name="file"
                        accept="image/*" ngf-max-size="10MB" required
                        ngf-model-invalid="errorFile" ngf-fix-orientation="true" hidden>
                      <span>Selecionar arquivo</span>
                    </label>
                    <div  style="margin-left:57px;">
                      <img ng-show="myForm.file.$valid" ngf-thumbnail="picFile2" class="thumb">
                      <!-- <button ng-click="picFile = null" ng-show="picFile">Remove</button> -->
                    </div>

                    <button ng-show="picFile2"  id=upload-btn class="btn" ng-disabled="!myForm.$valid"
                            ng-click="uploadPic(picFile2)"><span class="glyphicon glyphicon-upload"></span> Enviar</button>
                    <br>
                    <span class="progress" ng-show="picFile2.progress >= 0">
                      <div style="width:{{picFile2.progress}}%"
                          ng-bind="picFile2.progress + '%'"></div>
                    </span>
                    <span ng-show="picFile2.result">Upload Successful</span>
                    <span class="err" ng-show="errorMsg">{{errorMsg}}</span>
                    <i ng-show="myForm.file.$error.required">*required</i><br>
                    <i ng-show="myForm.file.$error.maxSize">File too large
                        {{errorFile.size / 1000000|number:1}}MB: max 2M</i>
                  </fieldset>
                  <br>
                </form>
            </div>
            <div class="tab-pane row" id="3a">
              <div class="checkbox">
                <label>
                  <input type="checkbox"
                         ng-model="head.show.avatar"
                         ng-blur="saveDiv('head.show.avatar')">Imagem principal
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox"
                         ng-model="site.head.items.title"
                         ng-blur="saveDiv('head.show.txt1')">Sub-titulo #1
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox"
                         ng-model="site.head.items.description"
                         ng-blur="saveDiv('head.show.txt2')">Sub-titulo #2
                </label>
              </div>
            </div>
          </div><!-- end predefined_styles -->
        </div><!-- end col -->
        <!-- end col -->
      </div><!-- end row -->
    </div>
  </div><!-- end form_holder -->

  <!-- End Switcher -->
  <div class="container">
    <div class="row">
  <!-- <input type="text" ng-model="selected"> -->
      <div class="col-lg-12">
        <style>
           .c{
            border-radius: 100%;
            box-shadow: 0 0 8px rgba(0, 0, 0, .8) ;
            -webkit-box-shadow: 0 0 8px rgba(0, 0, 0, .8);
            -moz-box-shadow: 0 0 8px rgba(0, 0, 0, .8);
            padding: 2px;
            }

            .sombra {
              text-shadow: 5px 5px 5px rgba(50, 33, 55, 0.6);
            }

            .sombra2 {
              text-shadow: 5px 5px 5px rgba(50, 33, 55, 0.5);
            }

            <% if @isLogged then%>
              .isLogged{
                border: 2px dashed #ffffff;
              }
              .isLogged:hover {
                border: 2px dashed #0090D2;}
           <% end %>
        </style>
        <img ng-show=head.show.avatar
             class="c isLogged avatarImg"
             ng-src="{{ head.avatar }}"
             ng-click="!isLogged || openHeaderModal()"/>
        <div id=div1></div>
        <div class="intro-text">
          <span class="name">
            <div contenteditable="{{isLogged}}"
                ng-show=head.show.txt1
                ng-model="head.txt1"
                strip-br="true"
                select-non-editable="true"
                ng-blur="saveDiv('head.txt1')"
                placeholder="Texto de apresentação..."
                ng-class="{sombra: head.show.shadow}"
                >
            </div>
          </span>
          <hr ng-show=head.show.txt2 class="star-light sombra">
          <span class="skills">
            <div contenteditable="{{isLogged}}"
                ng-show=head.show.txt2
                ng-model="head.txt2"
                strip-br="true"
                select-non-editable="true"
                ng-blur="saveDiv('head.txt2')"
                placeholder="Sub-texto de apresentação..."
                ng-class="{sombra2: head.show.shadow}"
                >
            </div>
          </span>
        </div>
      </div>
    </div>
  </div>
</header>
