<style>
  .hamburger {
    position: absolute;
    z-index: 2;
    cursor: pointer;
  }

  .line {
    width: 20px;
    height: 4px;
    background: #BCAD90;
    margin-bottom: 2px;
  }

  .menu {
    width: 200px;
    height: 100%;
    background: #BCAD90;
    position: fixed;
    top: 0;
    left: -320px;
    transition: left .1s;
  }

  .menu-item:first-child {
    margin-top: 180px;
  }

  .menu--open {
    left: 0;
  }

  .menu-item {
    color: #fff;
    width: 100%;
    padding: 1rem 3rem;
    box-sizing: border-box;
  }

  .menu-item:hover {
    background: #91966E;
    cursor: pointer;
  }
</style>
<style>
  .portfolio_class {
      padding-bottom:0px;
  }
  .contact_class {
      padding-top:50px;
  }
  .avatarImg {
    height: auto;
    width: auto;
