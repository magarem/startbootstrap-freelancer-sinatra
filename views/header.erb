<header ng-controller="headerCtrl" class="main-wrapper"
        ng-style="{'background-color': siteData.head.backgroundColor,
                   'color': siteData.head.fontColor,
                   'background-image': siteData.head.backgroundUrl ? 'url(' + siteData.head.backgroundUrl + ')':''}">
  <div class="container" onclick='show(".modal_config_header_background")'>
    <div class="row">
      <div class="col-lg-12" >
        <!-- <div ng-show="isLogged" class=hamburger>
            <div class=line></div>
            <div class=line></div>
            <div class=line></div>
        </div> -->
        <img ng-show=siteData.head.show.avatar
             class="c isLogged avatarImg"
             ng-src="{{ siteData.head.avatar }}"
             onclick="event.stopPropagation();"
             ng-click="!isLogged || openHeaderModal()"/>      
        <div class="intro-text">
          <span class="name">
            <div contenteditable="{{isLogged}}"
                ng-show=siteData.head.show.txt1
                ng-model="siteData.head.txt1"
                strip-br="true"
                select-non-editable="true"
                ng-blur="saveDiv('siteData.head.txt1')"
                placeholder="texto 1"
                ng-class="{txtShadow: siteData.head.show.txtShadow}"
                style="font-family: {{siteData.head.fontFamily}};"
                onclick='show(".menu_header_txt")'
                id=headerFont1
                >
            </div>
          </span>
          <style>
           hr#head_star.star-light:after, hr#head_star.star-primary:after {
             color:{{siteData.head.fontColor}};
           }
           hr {
               box-sizing: content-box;
               height: 0;
               overflow: visible;
           }
          </style>

          <hr id=head_star ng-show="siteData.head.show.ruler" style="color:#e3cf7a; content:'\f006'" ng-style="{'border-color': siteData.head.fontColor}" class="star-light" ng-class="{txtShadow2: siteData.head.show.txtShadow}">
          <span class="skills">
            <div contenteditable="{{isLogged}}"
                ng-show=siteData.head.show.txt2
                ng-model="siteData.head.txt2"
                strip-br="true"
                select-non-editable="true"
                ng-blur="saveDiv('siteData.head.txt2')"
                placeholder="texto 2"
                ng-class="{txtShadow2: siteData.head.show.txtShadow}"
                style="font-family: {{siteData.head.fontFamily}};"
                id=headerFont2
                onclick='show(".menu_header_txt")'
                >
            </div>
          </span>
        </div>
      </div>
    </div>
  </div>
</header>
