<!-- Footer -->
<footer  class="text-center" ng-controller="footerCtrl">
  <div  class="footer-above" ng-if="isLogged || !siteData.footer.hide && (siteData.footer.endereco.length > 0 || siteData.footer.about_resumo.length > 0)">
    <div class="container" >
      <div class="row">
        <div class="footer-col col-md-4">
          <h3>Endereço</h3>
          <div contenteditable="{{isLogged}}"
            ng-model="siteData.footer.endereco"
            strip-br="true"
            select-non-editable="true"
            ng-blur="saveDiv('siteData.footer.endereco')"
            placeholder="Entre com o endereço...">
          </div>
        </div>
        <div ng-if="isLogged ||
           siteData.footer.social.facebook.length > 0 ||
           siteData.footer.social.googleplus.length > 0 ||
           siteData.footer.social.twitter.length > 0 ||
           siteData.footer.social.linkedin.length > 0 ||
           siteData.footer.site.email.length > 0" class="footer-col col-md-4">
          <h3>Links</h3>
             <form ng-show="isLogged">
               <div contenteditable="{{isLogged}}"
                 ng-model="siteData.footer.social.facebook"
                 strip-br="true"
                 select-non-editable="true"
                 ng-blur="saveDiv('siteData.footer.social.facebook')"
                 placeholder="Link Facebook...">
               </div>
               <br>
               <div contenteditable="{{isLogged}}"
                  ng-model="siteData.footer.social.googleplus"
                  strip-br="true"
                  select-non-editable="true"
                  ng-blur="saveDiv('siteData.footer.social.googleplus')"
                  placeholder="Link Google Plus...">
               </div>
               <br>
               <div contenteditable="{{isLogged}}"
                  ng-model="siteData.footer.social.twitter"
                  strip-br="true"
                  select-non-editable="true"
                  ng-blur="saveDiv('siteData.footer.social.twitter')"
                  placeholder="Link Twitter...">
               </div>
               <br>
               <div contenteditable="{{isLogged}}"
                  ng-model="siteData.footer.social.linkedin"
                  strip-br="true"
                  select-non-editable="true"
                  ng-blur="saveDiv('siteData.footer.social.linkedin')"
                  placeholder="Link Linkedin...">
               </div>
               <br>
            </form>

             <ul class="list-inline" ng-show="!isLogged">
               <li ng-hide="siteData.footer.social.facebook || siteData.footer.social.googleplus || siteData.footer.social.twitter || siteData.footer.social.linkedin">
                {{siteData.info.email}}
               </li>
               <li ng-if="siteData.footer.social.facebook">
                  <a href="https://facebook.com/{{siteData.footer.social.facebook}}" class="btn-social btn-outline"><i class="fa fa-fw fa-facebook"></i></a>
               </li>
               <li ng-if="siteData.footer.social.googleplus">
                  <a href="https://plus.google.com//{{siteData.footer.social.googleplus}}" class="btn-social btn-outline"><i class="fa fa-fw fa-google-plus"></i></a>
               </li>
               <li ng-if="siteData.footer.social.twitter">
                  <a href="https://twitter.com/{{siteData.footer.social.twitter}}" class="btn-social btn-outline"><i class="fa fa-fw fa-twitter"></i></a>
               </li>
               <li ng-if="siteData.footer.social.linkedin">
                  <a href="https://www.linkedin.com/{{siteData.footer.social.linkedin}}" class="btn-social btn-outline"><i class="fa fa-fw fa-linkedin"></i></a>
               </li>
            </ul>

        </div>
        <div class="footer-col col-md-4">
          <h3>Sobre</h3>
          <div contenteditable="{{isLogged}}"
            ng-model="siteData.footer.about_resumo"
            strip-br="true"
            select-non-editable="true"
            ng-blur="saveDiv('siteData.footer.about_resumo')"
            placeholder="Entre com texto...">
          </div>
        </div>
        <div ng-if="isLogged" class="checkbox" style="float: right">
          <label><input type="checkbox"  name="checkbox_footer_hide" ng-model="siteData.footer.hide" ng-change="saveDiv('siteData.footer.hide')">Esconder</label>
        </div>
      </div>
    </div>
  </div>
  <div class="footer-below navbar-fixed-bottom" style="padding: 10px 0;" >
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
            <!-- <a href ng-show="!isLogged" id="myBtn">[Login]</a> -->
            <!-- <a ng-show="isLogged" href=/logout>[Logout]</a> -->
            Modo de edição &nbsp;&nbsp;&nbsp;
            <button ng-show="isLogged"
                    type="button"
                    class="btn btn-success btn-sm font-weight-bold"
                    style="width: 100px; font-weight: bold"
                    onclick="location.href='/editPublish'"
                    >Publicar</button>
            <button ng-show="isLogged"
                    type="button"
                    class="btn btn-warning btn-sm"
                    style="width: 100px; font-weight: bold"
                    onclick="location.href='/editCancel'"
                    >Cancelar</button>
            <button ng-show="isLogged"
                    type="button"
                    class="btn btn-danger btn-sm"
                    style="width: 100px; font-weight: bold"
                    onclick="location.href='/logout'"
                    >Sair</button>
            &nbsp;&nbsp;Copyright © magaweb 2017&nbsp;&nbsp;<a href=http://radiando.net>Radiando.net</a>
        </div>
      </div>
    </div>
  </div>
</footer>
<a id="_botton" name=_botton></a>
