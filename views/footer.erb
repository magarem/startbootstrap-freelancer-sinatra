<!-- Footer -->
<footer class="text-center" ng-controller="footerCtrl">
  <div class="footer-above">
    <div class="container">
      <div class="row">
        <div class="footer-col col-md-4">
          <h3>Endereço</h3>
          <div contenteditable="{{isLogged}}"
            ng-model="footer.endereco"
            strip-br="true"
            select-non-editable="true"
            ng-blur="saveDiv('footer.endereco')"
            placeholder="Entre com o endereço...">
          </div>
        </div>
        <div class="footer-col col-md-4">
          <h3>Links</h3>
             <form  ng-show="isLogged">
               <div contenteditable="{{isLogged}}"
                 ng-model="footer.social.facebook"
                 strip-br="true"
                 select-non-editable="true"
                 ng-blur="saveDiv('footer.social.facebook')"
                 placeholder="Link Facebook...">
               </div>
               <br>
               <div contenteditable="{{isLogged}}"
                  ng-model="footer.social.googleplus"
                  strip-br="true"
                  select-non-editable="true"
                  ng-blur="saveDiv('footer.social.googleplus')"
                  placeholder="Link Google Plus...">
               </div>
               <br>
               <div contenteditable="{{isLogged}}"
                  ng-model="footer.social.twitter"
                  strip-br="true"
                  select-non-editable="true"
                  ng-blur="saveDiv('footer.social.twitter')"
                  placeholder="Link Twitter...">
               </div>
               <br>
               <div contenteditable="{{isLogged}}"
                  ng-model="footer.social.linkedin"
                  strip-br="true"
                  select-non-editable="true"
                  ng-blur="saveDiv('footer.social.linkedin')"
                  placeholder="Link Linkedin...">
               </div>
               <br>
            </form>

             <ul class="list-inline" ng-show="!isLogged">
               <li ng-hide="footer.social.facebook || footer.social.googleplus || footer.social.twitter ||footer.social.linkedin">
                {{site.email}}
               </li>
               <li ng-if="footer.social.facebook">
                  <a href="https://facebook.com/{{footer.social.facebook}}" class="btn-social btn-outline"><i class="fa fa-fw fa-facebook"></i></a>
               </li>
               <li ng-if="footer.social.googleplus">
                  <a href="https://plus.google.com//{{footer.social.googleplus}}" class="btn-social btn-outline"><i class="fa fa-fw fa-google-plus"></i></a>
               </li>
               <li ng-if="footer.social.twitter">
                  <a href="https://twitter.com/{{footer.social.twitter}}" class="btn-social btn-outline"><i class="fa fa-fw fa-twitter"></i></a>
               </li>
               <li ng-if="site.moldura.footer.social.linkedin">
                  <a href="https://www.linkedin.com/{{footer.social.linkedin}}" class="btn-social btn-outline"><i class="fa fa-fw fa-linkedin"></i></a>
               </li>
            </ul>

        </div>
        <div class="footer-col col-md-4">
          <h3>Sobre</h3>
          <div contenteditable="{{isLogged}}"
            ng-model="footer.about_resumo"
            strip-br="true"
            select-non-editable="true"
            ng-blur="saveDiv('footer.about_resumo')"
            placeholder="Entre com texto...">
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="footer-below ">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
            <a ng-show="isLogged" href=/logout> [Logout] </a>
             Copyright © magaweb 2016&nbsp;&nbsp;-
            &nbsp;<a href=http://radiando.net> Radiando.net</a>
        </div>
      </div>
    </div>
  </div>
</footer>
<a id="_botton" name=_botton></a>
