<script type="text/javascript" language="javascript">
  function valida_email(field){
    ret = true
    var filter = /^([\w-]+(?:\.[\w-]+)*)@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$/i;
    if(!filter.test(field)){
      ret = false
    }
    return ret
  }
  function valida_senha(field){
    return (field.length >= 4 && field.length <= 15)
  }
</script>
